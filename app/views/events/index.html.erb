	    <div class="card-text"><p>Start :  <%= e.start_date%></div>
	    <div class="card-text"><p>Duration :  <%= e.duration%>min</p></div>
	    <div class="card-text"><p>Location :  <%= e.location%></p></div>
	    <div class="card-text"><p>Price :  <%= e.price%>â‚¬</p></div>
	    <div class="card-text"><p>Event host & create by :  </p><%= e.administrator.email%></div>
