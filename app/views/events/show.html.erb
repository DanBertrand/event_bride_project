  <div class="card-header">
    <ul class="nav nav-pills card-header-pills">
      <li class="nav-item">
        <a class="nav-link active" href="#"><%= @event.title%></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#">Link</a>
